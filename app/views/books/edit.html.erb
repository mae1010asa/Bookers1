<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>

  <p><%= link_to "Show", book_path(@book) %>|
  <a href="/books">Back</a></p>

<% end %>